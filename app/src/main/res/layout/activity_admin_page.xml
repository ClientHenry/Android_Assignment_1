<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Page">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/customer_lbl_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Customer"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/customer_btn_sign_out"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:layout_gravity="center"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        app:icon="@drawable/button_arrow"
                        app:iconGravity="textEnd"
                        android:textSize="20dp"
                        app:iconSize="50dp"
                        android:text="Sign Out" />



                        <TextView
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="-------------------    Summary    -------------------"
                            android:layout_gravity="center"
                            android:textSize="20dp" />




                        <Button
                            style="?attr/materialIconButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:icon="@drawable/button_add"
                            />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/admin_btn_customer"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="10\nCustomer"
                            />

                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/admin_btn_supplier"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="10\nSupplier"
                            android:layout_marginLeft="40dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/admin_btn_order"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="10\norder"
                            />

                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/admin_btn_deal"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="20\nDeal"
                            android:layout_marginLeft="40dp"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="----------------------    Detail    ----------------------"
                        android:layout_gravity="center"
                        android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="ID"
                                android:gravity="center"
                                android:background="@color/material_dynamic_neutral_variant80"
                                android:layout_marginRight="1dp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@color/material_dynamic_neutral_variant80"
                                android:layout_marginRight="1dp"
                                android:gravity="center"
                                android:text="Name"
                                />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Option"
                                android:background="@color/material_dynamic_neutral_variant80"
                                android:gravity="center"
                                />


                        </LinearLayout>



                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/admin_recycler"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"
            android:layout_width="350dp"
            android:layout_gravity="center">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
